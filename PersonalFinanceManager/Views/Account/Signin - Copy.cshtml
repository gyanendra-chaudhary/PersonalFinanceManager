@model SigninViewModel;

<style>
	@@keyframes fadeInOut {
		0%, 100% {
			opacity: 0;
			transform: translateY(20px);
		}

		10%, 90% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.fade-sequence {
		opacity: 0;
		animation: fadeInOut 2s ease-in-out forwards;
	}

	.delay-1 {
		animation-delay: 0s;
	}

	.delay-2 {
		animation-delay: 2s;
	}

	.delay-3 {
		animation-delay: 4s;
	}

	.delay-4 {
		animation-delay: 6s;
	}

	.delay-5 {
		animation-delay: 8s;
	}

	.show-final {
		animation: showFinal 1s ease-in-out forwards;
	}

	@@keyframes showFinal {
		from {
			opacity: 0;
		}

		to {
			opacity: 1;
		}
	}
</style>
<div class="bg-[#DFDFDF] h-screen flex justify-center items-center relative overflow-hidden">

	<!-- Text Animation Container -->
	<div class="text-center antialiased font-semibold uppercase text-shadow-lg absolute">
		<h3 class="text-6xl/0 sm:text-7xl/0 md:text-8xl/0 tracking-widest fade-sequence delay-1">Welcome</h3>
		<p class="text-6xl/0 sm:text-7xl/0 md:text-8xl/0 tracking-widest fade-sequence delay-2">To</p>
		<p class="text-6xl/0 sm:text-7xl/0 md:text-8xl/0 tracking-widest fade-sequence delay-3">The</p>
		<p class="text-6xl/0 sm:text-7xl/0 md:text-8xl/0 tracking-widest fade-sequence delay-4">Finance Manager App</p>
		<p class="text-6xl/0 sm:text-7xl/0 md:text-8xl/0 tracking-widest fade-sequence delay-5 text-blue-600">Let’s Get Started!</p>
	</div>

	<div id="final-screen" class="hidden opacity-0 absolute inset-0 flex justify-center items-center">
		@* <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8"> *@
		<div class="max-w-md w-full space-y-8 bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
			<div>
				<img class="mx-auto h-12 w-auto" src="~/images/logo.jpg" alt="Workflow">
				<h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
					Sign in to your account
				</h2>
				<p class="mt-2 text-center text-sm text-gray-600">
					Or
					<a asp-action="Register" asp-controller="Account" class="font-medium text-indigo-600 hover:text-indigo-500">
						create a new account
					</a>
				</p>
			</div>
			<form class="mt-8 space-y-6" asp-route="/Login" method="post">
				<input type="hidden" name="remember" value="true">
				<div class="rounded-md shadow-sm -space-y-px">
					<div>
						<label for="email" class="sr-only">Email address</label>
						<input id="email" name="email" type="email" autocomplete="email" required
							   class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
							   placeholder="Email address"
							   asp-for="Email">
						<span asp-validation-for="Email"
							  class="text-red-500 text-xs"></span>
					</div>
					<div>
						<label for="password" class="sr-only">Password</label>
						<input id="password" name="password" type="password" autocomplete="current-password" required
							   class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
							   placeholder="Password"
						asp-for="Password"
							>
						<span asp-validation-for="Password"
							  class="text-red-500 text-xs"></span>
					</div>
				</div>

				<div class="flex items-center justify-between">
					<div class="flex items-center">
						<input id="remember-me" name="remember-me" type="checkbox"
							   class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
						asp-for="RememberMe"
							>
						<label for="remember-me" class="ml-2 block text-sm text-gray-900">
							Remember me
						</label>
					</div>

					<div class="text-sm">
						<a asp-action="ForgotPassword" asp-controller="Account" class="font-medium text-indigo-600 hover:text-indigo-500">
							Forgot your password?
						</a>
					</div>
				</div>

				<div>
					<button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
						<span class="absolute left-0 inset-y-0 flex items-center pl-3">
							<svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
								<path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
							</svg>
						</span>
						Sign in
					</button>
				</div>
			</form>

			<div class="mt-6">
				<div class="relative">
					<div class="absolute inset-0 flex items-center">
						<div class="w-full border-t border-gray-300"></div>
					</div>
					<div class="relative flex justify-center text-sm">
						<span class="px-2 bg-gray-50 text-gray-500">
							Or continue with
						</span>
					</div>
				</div>

				<div class="mt-6 grid grid-cols-2 gap-3">
					<div>
						<a asp-action="ExternalLogin" asp-controller="Account" asp-route-provider="Google"
						   class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
								<path d="M12.48 10.92v3.28h7.84c-.24 1.84-.853 3.187-1.787 4.133-1.147 1.147-2.933 2.4-6.053 2.4-4.827 0-8.6-3.893-8.6-8.72s3.773-8.72 8.6-8.72c2.6 0 4.507 1.027 5.907 2.347l2.307-2.307C18.747 1.44 16.133 0 12.48 0 5.867 0 .307 5.387.307 12s5.56 12 12.173 12c3.573 0 6.267-1.173 8.373-3.36 2.16-2.16 2.84-5.213 2.84-7.667 0-.76-.053-1.467-.173-2.053H12.48z" />
							</svg>
						</a>
					</div>

					<div>
						<a asp-action="ExternalLogin" asp-controller="Account" asp-route-provider="Facebook"
						   class="w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
							<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
								<path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
							</svg>
						</a>
					</div>
				</div>
			</div>
		</div>
		@* </div> *@
	</div>

	<script>
		setTimeout(() => {
		  const finalScreen = document.getElementById("final-screen");
		  finalScreen.classList.remove("hidden");
		  finalScreen.classList.add("show-final");
		}, 10000);
	</script>
</div>
