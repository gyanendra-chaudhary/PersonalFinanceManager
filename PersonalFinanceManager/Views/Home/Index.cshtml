@{
    ViewData["Title"] = "Welcome";
}

<style>
    /* Animation styles */
    .fade-in {
        animation: fadeIn 1s ease-in forwards;
    }

    .fade-out {
        animation: fadeOut 1s ease-out forwards;
    }

    .slide-up {
        animation: slideUp 0.5s ease-out forwards;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    @@keyframes fadeOut {
        from

    {
        opacity: 1;
    }

    to {
        opacity: 0;
    }

    }

    @@keyframes slideUp {
        from

    {
        transform: translateY(20px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    /* Layout styles */
    .welcome-screen {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }

    .sidebar {
        transition: width 0.3s ease;
    }

    .card {
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

    .nav-item:hover {
        background-color: #f3f4f6;
    }
</style>

<div class="relative h-screen overflow-hidden">
    <!-- Welcome Screen -->
    <div id="welcome-screen" class="welcome-screen w-full h-full flex flex-col items-center justify-center text-center p-4">
        <h1 class="text-4xl md:text-6xl font-bold text-indigo-800 mb-4 fade-in">Welcome</h1>
        <p class="text-2xl md:text-4xl text-gray-700 mb-8 fade-in" style="animation-delay: 0.5s">to Finance Manager</p>
        <div class="fade-in" style="animation-delay: 1s">
            <div class="w-16 h-16 border-4 border-indigo-500 border-t-transparent rounded-full animate-spin mx-auto"></div>
        </div>
    </div>

    <!-- Dashboard (initially hidden) -->
    <div id="dashboard" class="hidden w-full h-full bg-gray-100">
        <div class="flex h-full">
            <!-- Sidebar -->
            <div class="sidebar bg-white w-64 flex-shrink-0 border-r border-gray-200 flex flex-col">
                <!-- Sidebar Header -->
                <div class="p-4 bg-indigo-600 text-white flex items-center justify-between">
                    <span class="text-xl font-semibold">Finance Manager</span>
                    <button id="sidebar-toggle" class="p-1 rounded hover:bg-indigo-500">
